{{ define "content" }}

    <form class="form-signin" role="form" action="/user/register" method="post">
        <h2 class="form-signin-heading">
            <i class="fa fa-comments-o">
                论坛
            </i>
        </h2>
        <div class="lead">注册一个账号</div>
        <input id="name" type="text" name="name" class="form-control" placeholder="昵称" required autofocus>
        <input type="email" name="email" class="form-control" placeholder="电子邮箱" required>
        <input type="password" name="password" class="form-control" placeholder="密码" required>
        <button class="btn btn-lg btn-primary btn-block" type="submit">Sign up</button>
    </form>

{{ end }}